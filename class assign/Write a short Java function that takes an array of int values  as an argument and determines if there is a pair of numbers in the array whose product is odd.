package Practice;

import java.util.Scanner;

public class book
{
    public static void main(String[] args)
    {
        int n;
        Scanner sc=new Scanner(System.in);
        n= sc.nextInt();
        int arr[]=new int[n];
        for (int i = 0; i < n; i++) {
            arr[i]=sc.nextInt();
        }
        for(int i=0;i<n;i++)
        {
            for (int j = 0; j < n; j++)
            {
                if(arr[i]*arr[j]%2==0)
                {
                    System.out.println(arr[i]+" * "+arr[j]);
                }

            }
        }
    }
}
